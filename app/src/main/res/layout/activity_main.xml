<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/"
    android:background="@color/background_material_light"
    android:backgroundTint="#daf1ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="@string/greeting"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:theme="@style/Base.TextAppearance.AppCompat.Display2"
        android:textColor="#1ec8ff"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:background="@color/secondary_text_default_material_light"
        android:textAlignment="center"
        android:backgroundTint="#fcffff"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Inverse"
        android:textColor="#1482ff"
        android:theme="@style/Base.TextAppearance.AppCompat.Display2"
        android:textStyle="bold"
        android:textColorHighlight="#b27cff"
        android:inputType="text"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="                                  ~YOUR NAME~"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:theme="@style/TextAppearance.AppCompat.Display2"
        android:textAlignment="center" />

</RelativeLayout>
